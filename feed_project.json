---
  [
  {% for post in site.posts %}
      {
        "id" : "{{ post.title | xml_escape }}",
        "title"    : "{{ post.title }}",
        "url"     : "{{ post.url }}",
        "date"     : "{{ post.date | date: "%B %d, %Y" }}",
        "content"  : "{{ post.content | escape }}"
      }{% if forloop.last %}{% else %},{% endif %}
  {% endfor %}
  ]
